datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  name      String
  role      Role       @default(NURSE)
  shifts    Shift[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Shift {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  NURSE
  SUPERVISOR
} 